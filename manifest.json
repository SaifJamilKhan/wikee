{
	"manifest_version": 2,
	"name": "wikee",
	"description": "minimal wikipedia.",
	"author": "Jathu Satkunarajah",
	"version": "1.0",
	"permissions": [
		"http://*.wikipedia.org/wiki/*",
		"https://*.wikipedia.org/wiki/*"
	],
	"content_scripts": [{
		"matches": [
			"http://*.wikipedia.org/wiki/*",
			"https://*.wikipedia.org/wiki/*"
		],
		"css": [
			"lib/wikee.style.css"
		],
		"js": [
			"lib/wikee.script.js"
		]
	}],
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	}
}